<Window x:Class="FirstLesson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstLesson"
        mc:Ignorable="d"
        Title="First Lesson" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="400" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1"
                   Text="Введите свой пароль"
                   Width="120"
                   Height="50"
                   Margin="0, 0, 0, 150"></TextBlock>
        <TextBox Grid.Column="1"
                 Name="PasswordTextBox"
                 Width="200"
                 Height="50"></TextBox>
        <Button Grid.Column="1" 
                Content="Войти в систему"
                Width="200"
                Height="50"
                Margin="0, 150, 0, 0"
                Click="ButtonAuthClick"></Button>
    </Grid>
</Window>
