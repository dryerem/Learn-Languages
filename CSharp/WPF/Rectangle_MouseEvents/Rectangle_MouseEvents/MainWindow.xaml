<Window x:Class="Rectangle_MouseEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rectangle_MouseEvents"
        mc:Ignorable="d"
        Title="Rectangle Mouse Events" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Rectangle Width="400"
                       Height="200"
                       Fill="Red"
                       MouseEnter="RectangleMouseEnter"
                       MouseLeave="RectangleMouseLeave"></Rectangle>
            <Rectangle Width="400"
                       Height="200"
                       Fill="Red"
                       Margin="0, 10, 0, 0"
                       MouseEnter="RectangleMouseEnter"
                       MouseLeave="RectangleMouseLeave"></Rectangle>
        </StackPanel>
    </Grid>
</Window>
